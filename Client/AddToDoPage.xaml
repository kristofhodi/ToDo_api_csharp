<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Common;assembly=Common"
             x:Class="Client.AddToDoPage"
             Title="Új ToDo">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Entry x:Name="TitleEntry" Placeholder="Cím" />
            <Editor x:Name="DescriptionEditor" Placeholder="Leírás" HeightRequest="100" />
            <DatePicker x:Name="DeadlinePicker" />
            <HorizontalStackLayout>
                <Label Text="Kész:" VerticalOptions="Center" />
                <Switch x:Name="IsReadySwitch" />
            </HorizontalStackLayout>

            <Button Text="Mentés" Clicked="OnSaveClickedAsync" />
            <Button Text="Mégse" Clicked="OnCancelClickedAsync" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
