<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.EditToDoPage"
             Title="Edit ToDo">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Cím:" />
            <Entry x:Name="TitleEntry" Placeholder="Add a title" />

            <Label Text="Leírás:" />
            <Editor x:Name="DescriptionEditor" Placeholder="Add a description" AutoSize="TextChanges" />

            <Label Text="Határidő:" />
            <DatePicker x:Name="DeadlinePicker" />

            <HorizontalStackLayout>
                <Label Text="Kész:" VerticalOptions="Center" />
                <Switch x:Name="IsReadySwitch" />
            </HorizontalStackLayout>

            <Button Text="Mentés" Clicked="OnSaveClickedAsync" />
            <Button Text="Mégse" Clicked="OnCancelClickedAsync" BackgroundColor="LightGray" TextColor="Black" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>